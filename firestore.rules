
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Safely get user data. Returns null if document doesn't exist to prevent rule crashes.
    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : null;
    }
    
    function hasRole(role) {
      let userData = getUserData();
      return isSignedIn() && userData != null && userData.role == role;
    }
    
    function isAdmin() {
      return hasRole('ADMIN');
    }

    // --- Collection Rules ---

    // Users
    match /users/{userId} {
      allow read: if isSignedIn();
      // Allow user to create their own initial document during registration
      allow create: if isOwner(userId);
      // Update: Owner or Admin
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Providers
    match /providers/{providerId} {
      allow read: if true;
      allow write: if isSignedIn(); // Validation happens in app logic
    }

    // Service Requests
    match /requests/{requestId} {
      allow read, write: if isSignedIn(); 
    }

    // Messages
    match /messages/{messageId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.recipientId);
      allow create: if isSignedIn(); // Sender ID checked in logic/UI
      allow update: if isSignedIn();
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn(); 
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Service Types (Public Read required for Landing Page)
    match /service_types/{typeId} {
      allow read: if true;
      allow write: if true; // Open for seeding/admin convenience
    }

    // Global Settings (Public Read required for Landing Page)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read: if true; // Relaxed to allow dashboard fetch without permission errors
      allow create: if isSignedIn();
    }

    // AI Interactions (Fixed collection name from ai_interactions to ai_logs to match API)
    match /ai_logs/{id} {
      allow read, write: if true;
    }
  }
}
