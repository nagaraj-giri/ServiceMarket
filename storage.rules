
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Explicitly match the uploads folder where the app saves files
    match /uploads/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                   request.resource.contentType.matches('image/.*'); // Only images
    }
    // Fallback for any other paths (deny by default or keep previous permissive logic if needed for other features)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
