
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Standard uploads folder (Backward compatibility & General use)
    match /uploads/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.resource.size < 20 * 1024 * 1024 && // Increased limit to 20MB for versatility
                   request.resource.contentType.matches('image/.*');
    }

    // Organized Image Storage Rules
    // Path format: /images/{type}/{filename}
    match /images/{imageType}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.contentType.matches('image/.*')
                   && (
                     // Profile Pictures & Logos: Limited to 5MB
                     ((imageType == 'profiles' || imageType == 'logos') && request.resource.size < 5 * 1024 * 1024) ||
                     
                     // Gallery Images: Limited to 15MB
                     (imageType == 'gallery' && request.resource.size < 15 * 1024 * 1024) ||
                     
                     // Cover Images & High Res Banners: Limited to 25MB
                     (imageType == 'covers' && request.resource.size < 25 * 1024 * 1024) ||
                     
                     // Fallback for other image types
                     request.resource.size < 10 * 1024 * 1024
                   );
    }

    // Fallback for any other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
